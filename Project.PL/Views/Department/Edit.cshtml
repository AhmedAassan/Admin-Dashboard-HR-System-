@model Progect.BL.Models.DepartmentVM

@{
    ViewData["Title"] = "Edit";
}

<div class="block-header">
    <h2>Department Edit</h2>
</div>

<form asp-action="Edit" asp-controller="Department">
    <div asp-validation-summary="All" class="bg-danger"></div>

    <div class="form-group">
        <input type="hidden" class="form-control " asp-for="Id" />
    </div>

    <div class="form-group">
        <lable>Department Name :</lable>
        <input type="text" class="form-control " asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger bg-danger"></span>

    </div>

    <div class="form-group">
        <lable>Department Code :</lable>
        <input type="text" class="form-control " asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger bg-danger"></span>

    </div>

    <center>
        <a asp-action="Index" asp-controller="Department" class="btn btn-primary">Back To Data</a>
        <a asp-action="Delete" asp-controller="Department" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>

        <input type="submit" value="Edit" class="btn btn-success" />
        <input type="reset" value="Cancle" class="btn btn-danger" />

    </center>
</form>
@section jqueryValidation{

    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}