@model IdentityUserExtend
@{
    ViewData["Title"] = "Edit";
}

<div class="block-header">
    <h2>Update  User</h2>
</div>

<form asp-action="Edit" asp-controller="Users" class="form-group">
    <div asp-validation-summary="All" class="bg-danger"></div>

    <div class="form-group">
        <lable> ID :</lable>
        <input type="text" class="form-control" asp-for="Id"  readonly/>
        <span asp-validation-for="Id" class="text-danger bg-danger"></span>
    </div>

    <div class="form-group">
        <lable> User Name :</lable>
        <input type="text" class="form-control" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger bg-danger"></span>
    </div>

    <div class="form-group">
        <lable> Email :</lable>
        <input type="email" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger bg-danger"></span>
    </div>

    

    


    <center>
        <input type="submit" value="Edite" class="btn btn-primary" />
        <input type="reset" value="Cancle" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Users" class="btn btn-warning">Back To Data</a>
    </center>
</form>
@section jqueryValidation{

    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

@section BootstrapSelect{
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}
