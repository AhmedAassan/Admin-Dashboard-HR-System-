@model IEnumerable<Progect.BL.Models.DepartmentVM>
@{
    ViewData["Title"] = "Index";
}
<style>
    tr, td, th{
        text-align: center;
    }
</style>
<div class="block-header">
    <h2>Welcome To Department</h2>
</div>

<a asp-action="Create" asp-controller="Department" class="btn btn-info">Create New Department</a>
<center>
    <h2>Welcome To Department</h2>
</center>
<table class="table table-bordered table-condensed table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Code</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Code</td>
            <td><a asp-action="Details" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-warning">Details</a></td>
            <td><a asp-action="Edit" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-success">Update</a></td>
            <td><a asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>

        }

    </tbody>
</table>
