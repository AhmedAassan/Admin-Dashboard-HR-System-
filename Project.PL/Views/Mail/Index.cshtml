@model Progect.BL.Models.MailVM
@{
    ViewData["Title"] = "Index";
}












<center>
    <h2>Welcome To Mail screen</h2>
    @ViewBag.msg;
</center>

<form asp-action="Index" asp-controller="Mail">
    <div class="form-group">
        <label asp-for="Mail">Mail</label>
        <input asp-for="Mail" type="email" placeholder="Enter Your E-Mail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" placeholder="Enter Your Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Massage">Massage</label>
        <textarea asp-for="Massage" rows="4" placeholder="Enter Your Massage" class="form-control" ></textarea>
    </div>
    <input type="submit" value="Send" class="btn btn-success"/>
</form>