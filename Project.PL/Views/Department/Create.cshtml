@model Progect.BL.Models.DepartmentVM
@{
    ViewData["Title"] = "Create";
}

<div class="block-header">
    <h2>Create New Department</h2>
</div>

<form asp-action="Create" asp-controller="Department" class="form-group">
    <div asp-validation-summary="All" class="bg-danger"></div>

    <div class="form-group">
        <lable>Department Name :</lable>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger bg-danger"></span>
    </div>

    <div class="form-group">
        <lable>Department Code :</lable>
        <input type="text" class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger bg-danger"></span>
    </div>

    <center>
        <input type="submit" value="Save" class="btn btn-primary" />
        <input type="reset" value="Cancle" class="btn btn-danger" />
    </center>
</form>
@section jqueryValidation{

    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}