@model Progect.BL.Models.EmployeeVM
@{
    ViewData["Title"] = "Delete";
}

<div class="block-header">
    <h2>Delete Employee</h2>
</div>

<form asp-action="Delete" asp-controller="Employee" class="form-group">
    <div>
        <center>
            <h2>Are u sure To Delete This Data ?</h2>
        </center>
    </div>
    <div class="form-group">
        <lable> Name :</lable>
        <input type="text" class="form-control" asp-for="Name" readonly />
    </div>

    <div class="form-group">
        <lable> Salary :</lable>
        <input type="number" class="form-control" asp-for="Salary" readonly />
    </div>

    <div class="form-group">
        <lable> Email :</lable>
        <input type="email" class="form-control" asp-for="Email" readonly />
    </div>

    <div class="form-group">
        <lable>HireDate :</lable>
        <input type="date" class="form-control" asp-for="HireDate" readonly />
    </div>
    <div class="form-group">
        <lable> Address :</lable>
        <input type="text" class="form-control" asp-for="Address" readonly />
    </div>

    <div class="form-group">
        <lable>Massage :</lable>
        <textarea rows="4" placeholder="Type Your Massage" class="form-control" asp-for="Notes" readonly></textarea>
    </div>

    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" checked="" readonly>
        <label asp-for="IsActive">IsActive</label>
    </div>

    <select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.DepartmentList" disabled>
        <option>Choose  Department</option>

    </select>



    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PhotoName" />
    <input type="hidden" asp-for="CvName" />

    <center>
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Employee" class="btn btn-warning">Back To Data</a>
    </center>
</form>


@section BootstrapSelect{
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}