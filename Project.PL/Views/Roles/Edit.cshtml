@model IdentityRole
@{
    ViewData["Title"] = "Edit";
}

<div class="block-header">
    <h2>Update  Role</h2>
</div>

<form asp-action="Edit" asp-controller="Roles" class="form-group">
    <div asp-validation-summary="All" class="bg-danger"></div>

    <div class="form-group">
        <lable> ID :</lable>
        <input type="text" class="form-control" asp-for="Id" readonly />
        <span asp-validation-for="Id" class="text-danger bg-danger"></span>
    </div>

    <div class="form-group">
        <lable> User Name :</lable>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger bg-danger"></span>
    </div>






    <center>
        <input type="submit" value="Edite" class="btn btn-primary" />
        <input type="reset" value="Cancle" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Roles" class="btn btn-warning">Back To Data</a>
    </center>

    <center class="m-t-10">
        
        <a asp-action="AddOrRemoveUsers" asp-controller="Roles" asp-route-RoleId="@Model.Id" class="btn btn-success btn-block">Add Or Remove Users With Role</a>
    </center>
</form>
@section jqueryValidation{

    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

@section BootstrapSelect{
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}
