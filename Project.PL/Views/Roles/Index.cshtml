@model IEnumerable<IdentityRole>;
@{
    ViewData["Title"] = "Roles";
}

<style>
    tr, td, th {
        text-align: center;
    }
    .design {
        display:flex;
        justify-content:center;
        padding:10px;
    }
    .design-btn{
        padding:10px 50px;
    }
</style>
<div class="block-header">
    <h2>Welcome To Users</h2>
</div>

<div class="container">
    <div class="design">
        <a asp-controller="Roles" asp-action="Create" class="btn btn-primary design-btn">Create</a>
    </div>
</div>

<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Roles</h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable table-condensed">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>

                                    <th>@SharedLocalizer["Details"]</th>
                                    <th>@SharedLocalizer["Update"]</th>
                                    <th>@SharedLocalizer["Delete"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td><a asp-action="Details" asp-controller="Roles" asp-route-id="@item.Id" class="btn btn-info">@SharedLocalizer["Details"]</a></td>
                                        <td><a asp-action="Edit" asp-controller="Roles" asp-route-id="@item.Id" class="btn btn-success">@SharedLocalizer["Update"]</a></td>
                                        <td><a asp-action="Delete" asp-controller="Roles" asp-route-id="@item.Id" class="btn btn-danger">@SharedLocalizer["Delete"]</a></td>
                                    </tr>

                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>












