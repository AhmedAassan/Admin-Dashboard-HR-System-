@model Progect.BL.Models.DepartmentVM

@{
    ViewData["Title"] = "Delete";
}

<div class="block-header">
    <h2>Department Edit</h2>
</div>

<form asp-action="Delete" asp-controller="Department">
    <div asp-validation-summary="All" class="bg-danger"></div>

    <div class="form-group">
        <lable>Department Id :</lable>
        <input type="text" class="form-control " asp-for="Id" readonly/>
    </div>

    <div class="form-group">
        <lable>Department Name :</lable>
        <input type="text" class="form-control " asp-for="Name" readonly/>

    </div>

    <div class="form-group">
        <lable>Department Code :</lable>
        <input type="text" class="form-control " asp-for="Code" readonly/>

    </div>

    <center>
        <a asp-action="Index" asp-controller="Department" class="btn btn-primary">Back To Data</a>
        <a asp-action="Edit" asp-controller="Department" asp-route-id="@Model.Id" class="btn btn-danger">Edit</a>

        <input type="submit" value="Delete" class="btn btn-success" />

    </center>
</form>
